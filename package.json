{
  "name": "livestory-sanity-sdk",
  "version": "1.0.2",
  "type": "module",
  "main": "./livestory-sanity.js",
  "module": "./livestory-sanity.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./livestory-sanity.js",
      "types": "./index.d.ts"
    },
    "./storefront": {
      "import": "./storefront/index.js",
      "types": "./storefront/index.d.ts"
    },
    "./studio": {
      "import": "./studio/index.js",
      "types": "./studio/index.d.ts"
    }
  },
  "files": [
    "studio",
    "storefront",
    "livestory-sanity.js",
    "index.d.ts"
  ],
  "scripts": {
    "build:js:lib": "vite build --config vite.config.js",
    "build:js:modules": "vite build --config vite.config.modules.js",
    "build:types": "tsc --project tsconfig.build.json",
    "build:js": "npm run build:js:lib",
    "build": "npm run build:types && npm run build:js",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Live-Story/livestory-sanity-sdk.git"
  },
  "keywords": [],
  "author": "Live Story",
  "description": "Live Story SDK for Sanity CMS integration on Hydrogen storefronts",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "sanity": ">=3.25.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanity": "^4.10.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
